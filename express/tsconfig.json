{
  "compilerOptions": {
    "lib": ["esnext"],
    "incremental": true,
    "rootDir": "src",
    "outDir": "dist",
    "target": "es2021",
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "noImplicitOverride": true,
    "removeComments": true,
  },
  "include": ["src"]
}